float area(float a, float b)
{ float x;
   x= a*b;
   return x;
}
string invertir(string var3){
	int lng;
	char aux;
	string var2=var3;
	lng= var2.length();
	for ( int i=0; i<lng/2;i++)
	{
		aux=var2.at(i);
		var2[i]=var2[lng-1-i];
		var2[lng-1-i]=aux;

	}
	return var2;
}
void cargar (double a[], int tam)
{
	 

	for(int i=0;i<tam;i++)
	{
		do{
		cout<<"a["<<i<<"]= ";
		cin>> a[i];
		} while (a[i]);
	}
}




